<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="60dp"
    android:background="@drawable/button_activty"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/ButtonAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:background="@android:drawable/ic_lock_silent_mode_off"
        android:backgroundTint="#F12727"
        android:backgroundTintMode="src_over"
        android:foregroundGravity="center_vertical"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

    <TextView
        android:id="@+id/TextSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/ButtonAudio"
        android:gravity="start|center_vertical"
        android:text="何事も始めるのに遅すぎるということはない。 "
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>